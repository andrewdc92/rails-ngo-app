<%= @ngos.each do |ngo| %>
  <div class="reveal" id="modal" data-reveal>
    <h1><%= ngo.name %> </h1>
    <p class="lead"><% ngo.content %> </p>
    <button class="close-button" data-close aria-label="Close modal" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
