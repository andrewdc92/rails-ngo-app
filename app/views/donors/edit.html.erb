<center><div class="m-x-auto newuser" style="width: 400px;"><center>

  <div class="card">
    <div class="medium-12 columns">

    <h3 class="title">Edit your Profile Below</h3>

  <% if @donor.id == current_donor.id %>
    <%= form_for @donor, method: "patch" do |f| %>
      <div>
        <%= f.text_field :first_name, placeholder: "First Name" %>
      </div>
      <div>
        <%= f.text_field :last_name, placeholder: "Last Name" %>
      </div>
      <div>
        <%= f.email_field :email, placeholder: "Email" %>
      </div>
      <div class="content">
        <%= f.submit "Update" %>
      </div>
    <% end %>
  <% else %>
    Something messed up :(
  <% end %>

  </div>
</div>

</div>
